generator client {
  provider = "prisma-client-js"
}

enum Status {
  PENDING
  APPROVED
  REJECTED
  SUSPENDED
}

enum AppointmentType {
  IN_PERSON
  ONLINE
  VIDEO_CALL
}

enum AppointmentStatus {
  PENDING
  APPROVED
  REJECTED
  COMPLETED
  CANCELED
}

// Removed unused enums and models related to reports, transactions, documents, pharmacies, and hospitals

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id         String   @id @default(uuid())
  supabaseId String   @unique
  email      String   @unique
  fullName   String
  role       Role
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  doctor     Doctor?
  patient    Patient?

  // Chat relations
  sentMessages         Message[]      @relation("SentMessages")
  notifications        Notification[]
  payments             Payment[]

  @@index([supabaseId])
  @@index([email])
}

model Patient {
  id                  String          @id @default(uuid())
  supabaseId          String          @unique
  dateOfBirth         DateTime
  gender              String
  phone               String
  address             String
  medicalHistory      String?
  createdAt           DateTime        @default(now())
  updatedAt           DateTime        @updatedAt
  profile_picture_url String?
  appointments        Appointment[]
  MedicalRecord       MedicalRecord[]
  user                User            @relation(fields: [supabaseId], references: [supabaseId])
  prescriptions       Prescription[]
  conversations       Conversation[]  @relation("PatientConversations")

  @@index([supabaseId])
}

model Doctor {
  id             String         @id @default(uuid())
  supabaseId     String         @unique
  specialization String
  phone          String
  address        String
  status         Status         @default(PENDING) // Added status field
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt
  appointments   Appointment[]
  user           User           @relation(fields: [supabaseId], references: [supabaseId])
  prescriptions  Prescription[]
  conversations  Conversation[] @relation("DoctorConversations")
  documents      DoctorDocument[] // Relation to DoctorDocument

  @@index([supabaseId])
}

model DoctorDocument {
  id          String   @id @default(uuid())
  doctorId    String
  title       String
  fileUrl     String
  fileType    String
  fileName    String
  size        Int
  status      Status   @default(PENDING) // Document approval status
  uploadedAt  DateTime @default(now())
  doctor      Doctor   @relation(fields: [doctorId], references: [id])

  @@index([doctorId])
}

model Appointment {
  id        String            @id @default(uuid())
  patientId String
  doctorId  String
  date      DateTime
  time      String?
  type      AppointmentType   @default(IN_PERSON)
  notes     String?
  status    AppointmentStatus @default(PENDING)
  meetingId String?           // Unique meeting identifier
  meetingUrl String?          // Jitsi Meet URL
  endTime   DateTime?
  createdAt DateTime          @default(now())
  updatedAt DateTime          @updatedAt
  doctor    Doctor            @relation(fields: [doctorId], references: [id])
  patient   Patient           @relation(fields: [patientId], references: [id])
  payment   Payment?

  @@index([patientId])
  @@index([doctorId])
}

model Prescription {
  id           String   @id @default(uuid())
  patientId    String
  doctorId     String
  medication   String
  dosage       String
  instructions String
  createdAt    DateTime @default(now())
  doctor       Doctor   @relation(fields: [doctorId], references: [id])
  patient      Patient  @relation(fields: [patientId], references: [id])

  @@index([patientId])
  @@index([doctorId])
}

/// This model contains row level security and requires additional setup for migrations. Visit https://pris.ly/d/row-level-security for more info.
model MedicalRecord {
  id          String   @id
  patientId   String
  title       String
  description String?
  fileUrl     String
  fileType    String
  fileName    String
  size        Int
  uploadedAt  DateTime @default(now())
  createdAt   DateTime @default(now())
  updatedAt   DateTime
  Patient     Patient  @relation(fields: [patientId], references: [id])

  @@index([patientId])
}

model Conversation {
  id          String   @id @default(uuid())
  patientId   String
  doctorId    String
  createdAt   DateTime @default(now())
  messages    Message[]
  patient     Patient  @relation("PatientConversations", fields: [patientId], references: [id])
  doctor      Doctor   @relation("DoctorConversations", fields: [doctorId], references: [id])

  @@unique([patientId, doctorId])
}

model Message {
  id             String      @id @default(uuid())
  conversationId String
  senderId       String
  content        String
  createdAt      DateTime    @default(now())
  conversation   Conversation @relation(fields: [conversationId], references: [id])
  sender         User        @relation("SentMessages", fields: [senderId], references: [id])
}
model Hospital {
  id        String    @id @default(uuid())
  name      String
  location  String
  services  String?
  licenseNo String
  status    Status    @default(PENDING)
  createdAt DateTime  @default(now())
}

// Removed Transaction model as it's not used by the current app

// Removed unused enum ReportTarget

model Notification {
  id        String   @id @default(uuid())
  userId    String
  title     String
  message   String
  type      NotificationType
  read      Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])
}

enum PaymentStatus {
  PENDING
  SUCCESS
  FAILED
  CANCELLED
  REFUNDED
}

enum PaymentMethod {
  CARD
  BANK_TRANSFER
  USSD
  MOBILE_MONEY
}

model Payment {
  id            String        @id @default(uuid())
  userId        String
  appointmentId String?       @unique
  amount        Decimal       @db.Decimal(10,2)
  currency      String        @default("NGN")
  method        PaymentMethod
  status        PaymentStatus @default(PENDING)
  paystackRef   String?       // Paystack reference
  description   String
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
  user          User          @relation(fields: [userId], references: [id])
  appointment   Appointment?  @relation(fields: [appointmentId], references: [id])

  @@index([userId])
  @@index([paystackRef])
  @@index([status])
  @@index([createdAt])
}


enum Role {
  PATIENT
  DOCTOR
  ADMIN
  PHARMACIST
  HOSPITAL_ADMIN
}

enum NotificationType {
  APPOINTMENT
  PRESCRIPTION
  MESSAGE
  SYSTEM
}

